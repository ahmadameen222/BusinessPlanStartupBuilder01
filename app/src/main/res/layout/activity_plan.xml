<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".PlanActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:padding="20dp"
                  android:text="BASIC"
                  android:layout_marginTop="20dp"
                  android:layout_gravity="center"
                  android:gravity="left"
                  android:textColor="#ffff"
        />


        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/busname_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="BUSINESS NAME"
                android:inputType="textPersonName"
        />


        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/buscustomers_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="KEY CUSTOMERS"
                android:inputType="textPersonName"
        />

        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/busneed_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:padding="10dp"
                android:hint="PRODUCT NEED"
                android:inputType="textPersonName"
        />

        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/busdemand_edittext_register"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="PRODUCT DEMAND"
                android:inputType="textPersonName"
        />

        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/busprofits_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:padding="10dp"
                android:hint="PROFIT GENERATION IDEAS"
                android:inputType="textPersonName"
        />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:padding="20dp"
                  android:text="FITNESS"
                  android:layout_gravity="center"
                  android:gravity="left"
                  android:textColor="#ffff"
        />


        <EditText
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="left"
                android:id="@+id/busqualification_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="YOUR QUALIFICATION"
                android:inputType="textPersonName"
        />


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:padding="20dp"
                  android:text="COMPETITORS"
                  android:layout_gravity="center"
                  android:gravity="left"
                  android:textColor="#ffff"
        />

        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/buscompititiors_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:padding="10dp"
                android:ems="10"
                android:hint="KEY COMPETITORS"
                android:inputType="textPersonName"
        />


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:padding="20dp"
                  android:text="MARKET VALUES"
                  android:layout_gravity="center"
                  android:gravity="left"
                  android:textColor="#ffff"
        />


        <EditText
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="left"
                android:id="@+id/busattraction_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="BUSINESS ATTRACTION"
                android:inputType="textPersonName"
        />

        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/busmarket_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:padding="10dp"
                android:hint="PRODUCT MARKET"
                android:inputType="textPersonName"
        />


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:padding="20dp"
                  android:text="PRODUCTION"
                  android:layout_gravity="center"
                  android:gravity="left"
                  android:textColor="#ffff"
        />


        <EditText
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="left"
                android:id="@+id/busproductionplan_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="PRODUCTION PLAN"
                android:inputType="textPersonName"
        />

        <EditText
                android:layout_gravity="center"
                android:gravity="left"
                android:id="@+id/busgenerateprofit_edittext_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_edittext_register_login"
                android:ems="10"
                android:hint="PROFIT GENERATION"
                android:inputType="textPersonName"
        />


        <Button
                android:id="@+id/create_plan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_button"
                android:text="CREATE PLAN"
                android:textColor="@android:color/white"
                android:textStyle="bold"
        />

        <!--

                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="SAVE FORM"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:background="@drawable/bg"
                        android:id="@+id/save_form_button"/>
        -->

    </LinearLayout>

</ScrollView>