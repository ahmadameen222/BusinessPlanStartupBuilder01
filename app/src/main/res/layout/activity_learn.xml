<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22e8ffd4"
    tools:context=".LearnActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="30 PROVEN WAYS TO EARN:"
            android:textSize="21sp"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold" />

        <Button
            android:id="@+id/businessApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/backgroundbutton1"
            android:text="30 PROVEN WAYS TO EARN HERE"
            android:textColor="#ffff"
            android:textSize="18dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/quality" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:padding="10dp"
            android:text="@string/thirty_ways"
            android:textSize="21sp" />

        <Button
            android:id="@+id/businessApp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/backgroundbutton1"
            android:text="30 PROVEN WAYS TO EARN HERE"
            android:textColor="#ffff"
            android:textSize="18dp" />


    </LinearLayout>

</ScrollView>